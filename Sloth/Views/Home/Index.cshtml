@{
    ViewData["Title"] = "Home Page";
}

<div class="mdl-grid center-items">
    
    @Html.Partial("_Upload")

    <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
        <div class="mdl-card__media">
            <img src="~/images/apple.jpg" alt="" style="padding:10px;">
        </div>
        <div class="mdl-card__supporting-text">
            Auckland Sky Tower, taken March 24th, 2014
        </div>
        <div class="mdl-card__supporting-text">
            The Sky Tower is an observation and telecommunications tower located in Auckland,
            New Zealand. It is 328 metres (1,076 ft) tall, making it the tallest man-made structure
            in the Southern Hemisphere.
        </div>
    </div>
</div>
<div class="mdl-layout-spacer"></div>
<footer class="mdl-mini-footer">
    <div class="mdl-mega-footer--left-section">
        <ul class="mdl-mini-footer__link-list">
            <li>From <a href="http://www.bim42.com" style="text-decoration: underline">BIM 42</a>, with <i class="material-icons md-15">favorite</i></li>
        </ul>
    </div>
    <div class="mdl-mini-footer--right-section">
        <ul class="mdl-mini-footer__link-list">
            <li>Licence MIT</li>
            <li>Icons by Oksana Latysheva and Dmitry Mirolyubov from the Noun Project</li>
            <li>Available on <a href="https://github.com/simonmoreau/Sloth" style="text-decoration: underline">GitHub</a></li>
        </ul>
    </div>
</footer>

