@model IEnumerable<Sloth.Models.DisplayTopic>

@{
    ViewData["Title"] = "Topics";
}

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-col">
        <div class="mdl-grid">
            <div class="demo-card-wide mdl-card mdl-shadow--2dp mdl-cell">
                <div class="mdl-card__title">
                    <span>Export </span>
                    
                </div>
                <div class="mdl-card__supporting-text">
                    <ul>
                        <li><object type="image/svg+xml" data="~/images/doc.svg">Your browser does not support SVG</object></li>
                        <li><object type="image/svg+xml" data="~/images/xls.svg">Your browser does not support SVG</object></li>
                        <li><object type="image/svg+xml" data="~/images/pdf.svg">Your browser does not support SVG</object></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="mdl-cell mdl-cell--10-col">
        <div class="mdl-grid">
            @foreach (var item in Model)
            {
                <div class="mdl-card mdl-shadow--2dp mdl-cell demo-card-image">
                    <div class="demo-card-image mdl-card" style="background: url('@item.ImageSource') center / cover">
                        <div class="mdl-card__title mdl-card--expand"></div>
                        <div class="demo-card-image__caption">
                            <span class="demo-card-image__filename">@item.Title</span>
                        </div>
                    </div>
                    <div class="mdl-card__supporting-text">
                        <p>By @item.CreationAuthor</p>
                        <p>@item.CreationDate</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
