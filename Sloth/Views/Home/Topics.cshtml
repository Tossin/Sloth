@model IEnumerable<Sloth.Models.DisplayTopic>


@foreach (var item in Model)
{

    <div class="demo-card-image mdl-card mdl-shadow--2dp mdl-cell" >
        <div style="background: url('@item.ImageSource') center / cover" class="mdl-card">
            <div class="mdl-card__title mdl-card--expand"></div>
            <div class="mdl-card__actions mdl-card__caption">
                <span class="demo-card-image__filename">@item.Title</span>
            </div>
        </div> 
        <div class="mdl-card__supporting-text">
            @item.Description
        </div>
    </div>
}
