@model IEnumerable<Sloth.Models.DisplayTopic>

@{
    ViewData["Title"] = "Topics";
}

<!-- No header, and the drawer stays open on larger screens (fixed drawer). -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">
    <div class="mdl-layout__drawer">
        <span class="mdl-layout-title">Export</span>
        <form asp-controller="Home" method="post">
            <nav class="mdl-navigation">
                <label class="mdl-navigation__link">
                    <object type="image/svg+xml" data="~/images/doc.svg" class="logo-export">Your browser does not support SVG</object>
                    <span>As Word</span>
                    <input type="submit" value="WordExport" formaction="WordExport" style="display: none;" />
                </label>
                <label class="mdl-navigation__link">
                    <object type="image/svg+xml" data="~/images/xls.svg" class="logo-export">Your browser does not support SVG</object>
                    <span>As Excel</span>
                    <input type="submit" value="ExcelExport" formaction="ExcelExport" style="display: none;" />
                </label>
            </nav>
        </form>
        <span class="mdl-layout-title">Load a Template</span>
        <form  method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="WordTemplate">
            <nav class="mdl-navigation">
                <label class="mdl-navigation__link">
                    <object type="image/svg+xml" data="~/images/doc.svg" class="logo-export">Your browser does not support SVG</object>
                    <span>Word Template</span>
                    <input type="file" name="file" style="display: none;" onchange="this.form.submit()"/>
                </label>
            </nav>
        </form>
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="ExcelTemplate">
            <nav class="mdl-navigation">
                <label class="mdl-navigation__link">
                    <object type="image/svg+xml" data="~/images/xls.svg" class="logo-export">Your browser does not support SVG</object>
                    <span>Excel Template</span>
                    <input type="file" name="file" style="display: none;" onchange="this.form.submit()" />
                </label>
            </nav>
        </form>
    </div>
    <div class="mdl-layout__content">
        <div class="mdl-grid">
            @foreach (var item in Model)
            {
                <div class="mdl-card mdl-shadow--2dp mdl-cell demo-card-image">
                    <div class="demo-card-image mdl-card" style="background: url('@item.ImageSource') center / cover">
                        <div class="mdl-card__title mdl-card--expand"></div>
                        <div class="demo-card-image__caption">
                            <span class="demo-card-image__filename">@item.Title</span>
                        </div>
                    </div>
                    <div class="mdl-card__supporting-text">
                        <p>By @item.CreationAuthor</p>
                        <p>@item.CreationDate</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

